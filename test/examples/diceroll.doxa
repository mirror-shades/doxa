
// Dice roll 1.0 to 6.0
function diceRoll() {
    return @int(@random() * 6 + 1 ) as int else -1 
}

// test the probability of each roll
var ones is 0
var twos is 0
var threes is 0
var fours is 0
var fives is 0
var sixes is 0

each i in 1 to 1000 {
    const roll is diceRoll()
    if roll == 1 then ones += 1
    if roll == 2 then twos += 1
    if roll == 3 then threes += 1
    if roll == 4 then fours += 1
    if roll == 5 then fives += 1
    if roll == 6 then sixes += 1
}

@print("Ones: {ones}\n")
@print("Twos: {twos}\n")
@print("Threes: {threes}\n")
@print("Fours: {fours}\n")
@print("Fives: {fives}\n")
@print("Sixes: {sixes}\n")