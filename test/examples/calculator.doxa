

entry fn main() {
    const input is @input("Enter an equation: ");
    input?;

    const equation is split(input);
    equation?;

    return;
}

fn split(input :: string) -> string[] {
    var result is string[];
    var current is "";
    each c at i in input {
        if c equals " " then {
            @push(result, current);
            current is "";
        } else {
            current is current + c;
        }
        current?;
    }
    @push(result, current);
    return result;
}