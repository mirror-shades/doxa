pub enum GameState {
    Start,
    Running,
    GameOver,
}

pub struct Reactor {
    rods :: int
    neutrons :: int
    power :: int
    maxPower :: int

    pub function New() returns Reactor {
        return Reactor {
            rods is 0,
            neutrons is 0,
            power is 0,
            maxPower is 0,
        }
    }

    pub method addRod(x :: int) {
        var result is this.rods + x
        if result < 1 then {
            result is 1
        }
        this.rods is result
    }

    pub method getMaxPower() returns int {
        return this.maxPower
    }
}


