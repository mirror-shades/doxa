import math from "./badMath.doxa"; 

const limit :: int is 255;

pub function safeAdd(a :: int, b :: int) returns(int) {
    if(a > limit or b > limit) then {
        "Overflow"?;
        return -1;
    } 
    
    if(a < 0 or b < 0) then {
        "Underflow"?;
        return -1;
    }

    return math.add(a, b);
}



