// Test integer and float promotion
fn test_promotion() {
    // Integer division
    assert(5 / 2 == 2);
    
    // Float division with integer literals
    assert(5.0 / 2 == 2.5);
    assert(5 / 2.0 == 2.5);
    
    // Mixed integer and float variables
    let a = 5;
    let b = 2.0;
    assert(a + b == 7.0);
    assert(a - b == 3.0);
    assert(a * b == 10.0);
    assert(a / b == 2.5);
    
    // Nested expressions with promotion
    assert((a + 1) * 2.5 == 15.0);
    
    // Division always results in float
    assert(type_of(5 / 2) == "float");
    
    // Integer operations
    assert(5 + 2 == 7);
    assert(5 - 2 == 3);
    assert(5 * 2 == 10);
    
    // Float operations
    assert(5.0 + 2.0 == 7.0);
    assert(5.0 - 2.0 == 3.0);
    assert(5.0 * 2.0 == 10.0);
    assert(5.0 / 2.0 == 2.5);
    
    // Mixed operations
    assert(5 + 2.5 == 7.5);
    assert(5.0 + 2 == 7.0);
    
    println("All type promotion tests passed!");
}

test_promotion();
