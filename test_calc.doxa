function shunt(tokens :: Token[]) returns Token[] | nothing {
    var stack :: Token[]
    var operators :: Token[]
    each t in tokens {
        if t.token_type == TokenType.NUMBER then {
            @push(stack, t)
        }
        if t.token_type == TokenType.OPERATOR then {
            const op_stack_length is @length(operators)
            const op_prec is precedence(t.value)
            var prev_prec is -1
            if op_stack_length > 0 then {
                const prev_op is operators[op_stack_length - 1].value
                prev_prec is precedence(prev_op)
