module g from "graphics"

entry function main() {
    const rl is g.raylib
    rl.InitWindow(800, 600, "Test Window")
    
    // Just wait a bit and then close
    var i is 0
    while i < 100 {
        rl.BeginDrawing()
        rl.ClearBackground(rl.RED)
        rl.EndDrawing()
        i is i + 1
    }
    
    rl.CloseWindow()
}
